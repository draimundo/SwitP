<androidx.wear.widget.drawer.WearableDrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wirdanie.switp.MainActivity"
    android:background="@color/dark_grey">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/exit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|center_vertical"
                    android:paddingEnd="@dimen/action_drawer_item_icon_right_margin"
                    android:orientation="vertical">

                    <android.support.wearable.view.CircledImageView
                        android:id="@+id/btn_exit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_cc_clear"
                        app:circle_color="@android:color/darker_gray"
                        app:circle_radius="25dp"
                        app:circle_radius_pressed="20dp" />

                    <TextView
                        android:id="@+id/exit_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exit" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/exit"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.wear.widget.CircularProgressLayout
                        android:id="@+id/start_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        app:backgroundColor="@color/swimming_blue"
                        app:colorSchemeColors="@android:color/white"
                        app:strokeWidth="4dp">

                        <ImageView
                            android:id="@+id/start_iv"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_play_arrow_24px" />
                    </androidx.wear.widget.CircularProgressLayout>

                    <TextView
                        android:id="@+id/start_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Record" />
                </LinearLayout>
            </RelativeLayout >
        </FrameLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.wear.widget.drawer.WearableActionDrawerView
        android:id="@+id/bottom_action_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:scrollbars="none"
        app:drawer_content="@+id/drawer_content"
        app:peek_view="@+id/peek_view">

        <include layout="@layout/list_settings" />

        <LinearLayout
            android:id="@id/peek_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_settings_24px" />
        </LinearLayout>
    </androidx.wear.widget.drawer.WearableActionDrawerView>

</androidx.wear.widget.drawer.WearableDrawerLayout>